extends base

block content
    if errorMessage
        h4=errorMessage
    form(method="POST")
        label(for="oldPW") Old password
        input(id="oldPW" name="oldPW" type="password" required)
        label(for="newPW") New Password
        input(id="newPW" name="newPW" type="password" required)
        label(for="newPWConfirm") Confirm new password
        input(id="newPWConfirm" name="newPWConfirm" type="password" required)
        input(type="submit" value="Change")