extends ../base

block content
    form(method="POST" enctype="multipart/form-data")
        if errorMessage
            div.error-message âš  #{errorMessage}
        label(for="avatar") Avatar
        input(id="avatar" name="avatar" type="file" accept="image/*")
        label(for="name") Name
        input(id="name" name="name" type="text" value=loggedInUser.name required)
        label(for="email") Email
        input(id="email" name="email" type="email" value=loggedInUser.email required)
        input(type="submit" value="Save")
        div.edit-user__careful
            if loggedInUser.OAuthOnly
                a(href="create-pw") Create password
            else
                a(href="change-pw") Change password
            a(href="delete") Delete account