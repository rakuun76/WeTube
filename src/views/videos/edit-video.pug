extends ../base

block content
    form(method="POST")
        label(for="title") Title
        input(id="title" name="title" type="text" value=video.title required)
        label(for="description") Description
        input(id="description" name="description" type="text" value=video.description required)
        label(for="hashtags") Hashtags
        input(id="hashtags" name="hashtags" type="text" value=video.hashtags.join(", ") required)
        input(type="submit" value="Save")