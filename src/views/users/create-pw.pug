extends ../base

block content
    if errorMessage
        h4=errorMessage
    form(method="POST")
        label(for="password") Password
        input(id="password" name="password" type="password" required)
        label(for="pwConfirm") Confirm password
        input(id="pwConfirm" name="pwConfirm" type="password" required)
        input(type="submit" value="Save")