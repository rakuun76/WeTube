doctype html
html(lang="en")
    head
        title #{pageTitle} | #{siteName}
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
    body
        header
            h1=pageTitle
            nav(style="margin: 0")
                ul
                    li
                        a(href="/") Home
                    li
                        a(href="/search") Search
                    li
                        a(href="/videos/upload") Upload
                    if loggedIn
                        li
                            a(href="/logout") Logout
                        li
                            a(href="/profile") #{user.name}Ïùò Profile
                    else
                        li
                            a(href="/join") Join
                        li
                            a(href="/login") Login
        main
            block content
        include partials/footer
