include ../mixins/avatar

header
    a(href="/").header__logo
        i.fab.fa-youtube
    nav
        ul
            li
                a(href="/search").header__search.header__button
                    i.fas.fa-search
            if loggedIn
                li
                    a(href=`/users/${loggedInUser._id}`).header__avatar
                        +avatar(loggedInUser)
                li
                    a(href="/videos/upload").header__button Upload
                li
                    a(href="/users/logout").header__button Logout
            else
                li
                    a(href="/users/join").header__button Join
                li
                    a(href="/users/login").header__button Login